<h1>Edit Product</h1>

<p>
  <%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>
  <p>
    <%= f.label "name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "description" %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "price in cents" %><br>
    <%= f.number_field :price_in_cents %>
  </p>

  <p>
    <%= f.label "url" %><br>
    <%= f.text_field "url" %>
  </p>

  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>